<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/sw3"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:padding="3dp"
            android:layout_height="50dp">

        </ImageView>

        <TextView
            android:id="@+id/userTextVw"
            android:hint="Username"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textAppearance="@style/Base.CardView"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is an amazing day! Enjoying the sunshine ☀️ #HappyDay"
            android:textSize="16sp"
            android:padding="8dp">

        </TextView>

    </LinearLayout>




    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center_horizontal"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FCFFFF"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/imgVw"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#EEEEEE">

            </ImageView>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FCFFFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="false"
        >

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#EDE9E9"
        android:layout_marginLeft="0dp"
        android:padding="5dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_thumb_up_off_alt_24"
            />
        <TextView
            android:id="@+id/likeCnt"
            android:text=" Likes"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView

            android:id="@+id/commentButtonId"
            android:src="@drawable/baseline_comment_24"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="100dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:tint="@color/cardview_dark_background">

        </ImageView>
        <TextView
            android:text=" Comment"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#EDE9E9"
        android:layout_marginLeft="0dp"
        android:padding="5dp"
        android:layout_height="20dp">

    </LinearLayout>



</LinearLayout>
